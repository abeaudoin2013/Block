<div class="container" id="logocontainer">
	<div class="row">
		<h1 id="logo">Block..</h1>
	</div>
</div>
<div class="push_me">
<div class="container">
	<div class="row">
		<div class="col-sm-6 login-box">
					<h1 id="login-btn">Log In</h1>
					<div id="login-form">
						<%= form_tag '/sessions', method: :post do %>
							<p>
								<%= label_tag :email %><br>
								<%= text_field_tag :email %>
							</p>
							<p>
								<%= label_tag :password %><br>
								<%= password_field_tag :password_digest %>
							</p>
							<p>
								<%= submit_tag "log in", id: :loginbtn %>
							</p>
						<% end %>
					</div>
		</div>
		<div class="col-sm-6 sign-up-box">

				<%= render 'users/form' %>

		</div>
	</div>
</div>
</div>
<div id="about-us">
	<div class="container">
		<div id="about">
			<h2>Break your writerâ€™s block.</h2>
			<h2>Think creatively.</h2>
			<h2>Write more.</h2>
			<h4 id='tag'><i>Block is a series of creative writing exercises for wordsmiths of all levels.</i></h4>
		</div>
	</div>
</div>	
<div class="writers-example">
	<div class="container">
			<h1>Some of our writers</h1>
			<% @documents.each do |document| %>
				<div class="writers-example-doc">
				<%= document.body %> by <%=link_to document.user.username, user_path(document.user.id) %><br>	
				</div>		
			<% end %>
	</div>
</div>
