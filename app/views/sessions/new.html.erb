
<div id="log-in-container">
	<h1 id="log-in-btn">Log it in</h1>
	<div id="log-in-form">
		<%= form_tag '/sessions', method: :post do %>
			<p>
				<%= label_tag :email %><br>
				<%= text_field_tag :email %>
			</p>
			<p>
				<%= label_tag :password %><br>
				<%= password_field_tag :password_digest %>
			</p>
			<p>
				<%= submit_tag "log in", id: :loginbtn %>
			</p>

		<% end %>
	</div>
</div>
<div id="sign-up-container">
	<%= render 'users/form' %>
</div>