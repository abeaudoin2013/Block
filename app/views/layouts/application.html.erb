<!DOCTYPE html>
<html>
<head>
  <title>Block</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Kaushan+Script&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>
<body>
	<header>
		<nav>
			<% if current_user %>
<!-- 				<span>Hey there, <%= link_to current_user.username, @user %></span> -->
					<ul>
						<li><%=link_to "Profile", user_path(@user) %></li>
						<li><%=link_to "Log Out", sessions_path, method: :delete %></li>
					</ul>
			<% end %>	
		</nav>
	</header>
	<main> 
		<% if current_user %>
			<div class="row">
				<div id="exercise-icon" class='col-md-4'>
					<!-- <form method="post"> -->
						<p type="button" name="B1" value="Exercise >>" onclick="randomlink()"><i class="ion-edit"></i>Click to begin an exercise!</p> 
					<!-- </form> -->

				</div>
			</div>
		<% end %>
				<% if flash[:notice] %>
					<div class="notice"><%=flash[:notice]%></div> 
				<% end %>
				<%= yield %>
				<div id="footer">
			<h1>Block..</h1>
		</div>
		</main>
	</body>
</html>
