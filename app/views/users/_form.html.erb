<h1 id="signup-btn">Sign Up</h1>
<div id="signup-form">
	<%= form_for User.new do |f| %>

		<p>
		<%= f.label :username %><br>
		<%= f.text_field :username %>
		</p>

		<p>
		<%= f.label :email %><br>
		<%= f.email_field :email %>
		</p>

		<p>
		<%= f.label :password %><br>
		<%= f.password_field :password %>
		</p>

		<p>
		<%= f.submit "Sign up!", id: :signupbtn %>
		</p>

	<% end %>
</div>