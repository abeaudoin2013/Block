
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="exercise_explination">Hi, <%= @user.username %></h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<h2 class="exercise_explination"><%= @user.username %>'s writing examples</h2>
		</div>
	</div>
	</div>
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<% for document in @user.documents do %>
				<div class="col-lg-2 col-md-2">
					<%= render document %>
				</div>
			<% end %>
		</div>
	</div>
</div>