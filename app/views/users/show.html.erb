<div class="container profile-container">
<div class="container">
	<div class="row">
		<% if current_user %>
		<div class="col-lg-12">
			<h1 class="exercise_explination">Hi, <%= @user.username %></h1>
		</div>
		<% end %>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<h2 class="exercise_explination"><%= @user.username %>'s writing examples</h2>
		</div>
	</div>
	</div>
	<div class="row">
			<% for document in @user.documents.reverse do %>
				<div class="col-md-2">
					<%= render document %>
				</div>
				<% end %>
		</div>

</div>
<% if current_user %>
	<div id="close_account">
		<h4><%= link_to "Close Your Account", @user, method: :delete, data: {confirm: "Are you sure?"} %></h4>
	</div>
<% end %>
</div>