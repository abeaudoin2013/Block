<h3>Write a 200word essay on the following prompt....</h3>
<p>You have 10 minutes...</p>
<%= @prompt.setup %>
<%= form_for @document, url: prompts_path, :html => { :onsubmit => "return validateText();" } do |f| %>
	<p>
		<%= f.text_area :body, id: :prompts_doc, onkeyup: ("count(this)"), onclick: ("setTenMins('clockdiv')") %>
	</p>
	<p>
		<%= f.submit "Save" %>
	</p>
	<p>Word Count:<input type="text" id="c" onkeyup="count(document.new_document.prompts_doc,this)"></p>
<% end %>

<div id="clockdiv" onclick="setTenMins('clockdiv')">Start</div>



